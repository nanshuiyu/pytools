  <!-- ##Windows Azure SDK for Python ##################################### -->
  <entry>
    <productId>WindowsAzurePythonSDK</productId>
    <title resourceName="Entry_WindowsAzurePythonSDK_Title">Windows Azure SDK for Python - June 2012</title>
    <version>June 2012</version>
    <published>2012-6-7T12:00:00Z</published>
    <updated>2012-6-7T12:00:00Z</updated>
    <summary resourceName="Entry_WindowsAzurePythonSDK_Summary">Python development support for Windows Azure within Visual Studio."</summary>
    <longSummary resourceName="Entry_WindowsAzurePythonSDK_LongSummary">The Windows Azure SDK for Python provides developers with Python frameworks, packages, and Microsoft Visual Studio tools (if installed) for building scalable services for deployment to Windows Azure."</longSummary>
    <productFamily resourceName="Python">Python</productFamily>

    <link href="http://go.microsoft.com/fwlink/?LinkId=252044" />
    <author>
      <name>Microsoft</name>
      <uri>http://go.microsoft.com/fwlink/?LinkId=252036</uri>
    </author>
    <images>
      <icon>http://go.microsoft.com/fwlink/?LinkId=252047</icon>
    </images>
    <keywords>
      <keywordId>ProductTools</keywordId>
      <keywordId>ProductSpotlight</keywordId>
    </keywords>

    <discoveryHint>
      <registry>
        <keyPath>HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows Azure SDK for Python - June 2012</keyPath>
      </registry>
    </discoveryHint>

    <dependency>
      <productId>AzurePythonSDKCore</productId>
    </dependency>
    <related>
      <relatedProduct>
        <productId>PythonToolsForVS</productId>
      </relatedProduct>
      <relatedProduct>
        <productId>WindowsAzureToolsOnlyVS2010OrShell</productId>
      </relatedProduct>
    </related>

    <installers>
      <installer>
        <id>1</id>
        <languageId>en</languageId>
        <eulaURL>http://go.microsoft.com/fwlink/?LinkID=252059</eulaURL>
        <installCommands>
          <cmdline>
            <exe>%SystemRoot%\System32\cmd.exe</exe>
            <commandLineArguments>/C reg.exe add "HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows Azure SDK for Python - June 2012" /ve /f</commandLineArguments>
            <ignoreExitCode>false</ignoreExitCode>
          </cmdline>
        </installCommands>
        <helpLink>http://go.microsoft.com/fwlink/?LinkId=252044</helpLink>
      </installer>
    </installers>
  </entry>
  
  <!-- ##Windows Azure SDK for Python (Core)################################# -->
  <entry>
    <productId>AzurePythonSDKCore</productId>
    <title resourceName="Entry_AzurePythonSDKCore_Title">Windows Azure SDK for Python (Core) - June 2012</title>
    <version>June 2012</version>
    <published>2012-6-7T12:00:00Z</published>
    <updated>2012-6-7T12:00:00Z</updated>
    <summary resourceName="Entry_AzurePythonSDKCore_Summary">Python development support for Windows Azure.</summary>
    <longSummary resourceName="Entry_AzurePythonSDKCore_LongSummary">The Windows Azure SDK for Python provides developers with Python modules and packages for building scalable services for deployment to Windows Azure.</longSummary>
    <productFamily resourceName="Python">Python</productFamily>
    <link href="http://go.microsoft.com/fwlink/?LinkId=252044" />
    <author>
      <name>Microsoft</name>
      <uri>http://go.microsoft.com/fwlink/?LinkId=252036</uri>
    </author>
    <images>
      <icon>http://go.microsoft.com/fwlink/?LinkId=252047</icon>
    </images>
    <keywords>
      <keywordId>ProductTools</keywordId>
      <keywordId>FrameworkRuntime</keywordId>
    </keywords>

    <!-- TODO Update this around December 2012 -->
    <!-- 
    <discoveryHint>
      <file>
        <filePath>%SystemDrive%\Python27\Lib\site-packages\azure\__init__.py</filePath>
      </file>
    </discoveryHint>
    -->

    <dependency>
      <and>
        <dependency>
          <productId>WindowsAzureSDKOnly_1_7</productId>
        </dependency>
        <dependency>
          <productId>WindowsAzureEmulator_1_7</productId>
        </dependency>
        <dependency>
          <productId>Python27</productId>
        </dependency>
        <dependency>
          <productId>PythonDetectInstalls</productId>
        </dependency>
        <dependency>
          <productId>Django</productId>
        </dependency>
      </and>
    </dependency>

    <installers>
      <installer>
        <id>1</id>
        <languageId>en</languageId>
        <eulaURL>http://go.microsoft.com/fwlink/?LinkId=252059</eulaURL>
        <installCommands>
          <cmdLine>
            <exe>%TMP%\pip_installhelper_27_x86.bat</exe>
            <commandLineArguments>--log %TMP%\azure.log install azure --upgrade</commandLineArguments>
            <ignoreExitCode>false</ignoreExitCode>
          </cmdLine>
        </installCommands>
        <logFiles>
          <location>%TMP%\azure.log</location>
        </logFiles>
        <helpLink>http://go.microsoft.com/fwlink/?LinkId=252044</helpLink>
      </installer>
    </installers>
  </entry>
  
